#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'optparse'
require 'app_store_connect'

options = {}
OptionParser.new do |parser|
  parser.on('-fFILENAME', '--filename=FILENAME') do |filename|
    options[:filename] = filename
  end
end.parse!(ARGV)

documentation = AppStoreConnect::Documentation.new(
  on_documentation: ->(d) { puts d.to_terminal_table }
)

documentation.load!

dependency_graph = AppStoreConnect::DependencyGraph.new(
  specifications: documentation.specifications
)

dependency_graph.write!(filename: options[:filename])
