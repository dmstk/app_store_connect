#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'optparse'
require 'app_store_connect'

options = {}
OptionParser.new do |parser|
  parser.on('-fFILENAME', '--filename=FILENAME') do |filename|
    options[:filename] = filename
  end
end.parse!(ARGV)

documentation = AppStoreConnect::Documentation.new(
  on_documentation: proc { print '.' }
)

documentation.load!

specification = AppStoreConnect::Specification.new(
  specifications: documentation.specifications
)

File.write(options[:filename], specification.to_json)
